func handler(w http.ResponseWriter, r *http.Request) {
	fmt.Fprintf(w, "Hi there, I love %s!", r.URL.Path[1:])
}

func main() {

	port := os.Getenv("PORT")
	if port == "" {
		port = "8080"
	}
	
	log.Fatal(http.ListenAndServe(fmt.Sprintf(":%s", port), nil))
}
